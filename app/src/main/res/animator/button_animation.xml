<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">

    <objectAnimator
        android:propertyName="@string/scaleX"
        android:valueFrom="@string/StartValue"
        android:valueTo="@string/EndValue"
        android:duration="100"
        android:valueType="floatType" />

    <objectAnimator
        android:propertyName="@string/scaleY"
        android:valueFrom="@string/StartValue"
        android:valueTo="@string/EndValue"
        android:duration="100"
        android:valueType="floatType" />

    <objectAnimator
        android:propertyName="@string/scaleX"
        android:valueFrom="@string/EndValue"
        android:valueTo="@string/StartValue"
        android:duration="100"
        android:valueType="floatType"
        android:startOffset="100" />

    <objectAnimator
        android:propertyName="@string/scaleY"
        android:valueFrom="@string/EndValue"
        android:valueTo="@string/StartValue"
        android:duration="100"
        android:valueType="floatType"
        android:startOffset="100" />

</set>
